<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-2">
      <% f.label :fullname %>                 
      </div>
        <div class="col-sm-8" >
          <%= f.text_field :fullname, class: 'form-control design-rounded-input',placeholder: "Enter your full name"%>
        </div>
    </div>
  </div>

  <br>
       
  <div class="form-group">
    <div class="row">
      <div class="col-sm-2">
          <% f.label :email %>
      </div>
      <div class="col-sm-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control design-rounded-input", placeholder:"Email" %>
      </div>
     </div>
  </div>
  <br>
  <%= f.hidden_field :user_type,value: 'student' %>
  <div class="field form-group">
    <div class="row">
      <div class="col-sm-2">            
        <% f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control design-rounded-input", placeholder:"Password" %>
      </div>
    </div>
  </div>
  <br>

  <div class="field form-group">
    <div class="row">
          
      <div class="col-sm-2">            
        <% f.label :password_confirmation %>
    </div>
    <div class="col-sm-8">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control design-rounded-input", placeholder:"Password Confirmation" %>
      </div>
    </div>
  </div> <br>
 <br>
  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-success mx-auto d-block submit-rounded" %>
  </div>
<% end %>
